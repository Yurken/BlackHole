{
  "name": "blackhole",
  "version": "1.0.0",
  "description": "Electron Vue Go 悬浮球应用",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "preview": "vite preview"
  },
  "keywords": ["electron", "vue", "go", "floating-ball"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0",
    "vue": "^3.4.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.blackhole.app",
    "productName": "BlackHole",
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg"],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/main",
      "backend/main.exe",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
